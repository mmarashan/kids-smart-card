<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:paddingHorizontal="4dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:paddingVertical="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="1"
        tools:listitem="@layout/category_tag" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryRecyclerView"
        app:spanCount="2"
        tools:itemCount="2"
        tools:listitem="@layout/card_article" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/sound_button_size"
        android:layout_margin="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/prevTrackButton"
            android:layout_width="@dimen/sound_button_size"
            android:layout_height="@dimen/sound_button_size"
            android:background="@android:color/transparent"
            android:foreground="@drawable/ic_baseline_skip_previous"
            android:foregroundTint="@color/colorDarkText" />

        <ToggleButton
            android:id="@+id/musicToggleButton"
            android:layout_width="@dimen/sound_button_size"
            android:layout_height="@dimen/sound_button_size"
            android:background="@android:color/transparent"
            android:foreground="@drawable/ic_volume_toggle"
            android:foregroundTint="@color/colorDarkText"
            android:textOff=""
            android:textOn="" />

        <Button
            android:id="@+id/nextTrackButton"
            android:layout_width="@dimen/sound_button_size"
            android:layout_height="@dimen/sound_button_size"
            android:background="@android:color/transparent"
            android:foreground="@drawable/ic_baseline_skip_next"
            android:foregroundTint="@color/colorDarkText" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>