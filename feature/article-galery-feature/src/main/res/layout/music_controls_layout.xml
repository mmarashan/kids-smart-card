<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sound_button_size"

        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/prevTrackButton"
            android:layout_width="@dimen/sound_button_size"
            android:layout_height="@dimen/sound_button_size"
            android:background="?android:attr/selectableItemBackground"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_skip_previous"
            app:tint="@color/colorLightText" />

        <ToggleButton
            android:id="@+id/musicToggleButton"
            android:layout_width="@dimen/sound_button_size"
            android:layout_height="@dimen/sound_button_size"
            android:background="@android:color/transparent"
            android:foreground="@drawable/ic_volume_toggle"
            android:foregroundTint="@color/colorLightText"
            android:textOff=""
            android:textOn="" />

        <ImageView
            android:id="@+id/nextTrackButton"
            android:layout_width="@dimen/sound_button_size"
            android:layout_height="@dimen/sound_button_size"
            android:background="?android:attr/selectableItemBackground"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_skip_next"
            app:tint="@color/colorLightText" />
    </LinearLayout>

</androidx.cardview.widget.CardView>