<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:divider="@drawable/empty_divider_24"
    android:orientation="horizontal"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="24dp"
    android:clipToPadding="false"
    android:showDividers="middle">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonMute"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:fabCustomSize="48dp"
        app:backgroundTint="@android:color/holo_orange_light"
        android:tint="@color/colorWhite"
        android:src="@drawable/selector_music"
        app:elevation="6dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonAutoScroll"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:fabCustomSize="48dp"
        app:backgroundTint="@android:color/holo_orange_light"
        android:tint="@color/colorWhite"
        android:src="@drawable/selector_autoscroll"
        app:elevation="6dp"/>

    <com.jackandphantom.customtogglebutton.CustomToggle
        android:id="@+id/customToggle"
        android:layout_width="150dp"
        android:layout_height="48dp"
        app:ctg_addLeftIcon="@drawable/ic_music_note"
        app:ctg_addRightIcon="@drawable/ic_music_off"
        app:ctg_addSlideColor="@android:color/holo_orange_light"
        app:ctg_addSlideBackgroundColor="#6c817a"
        app:ctg_addAnimationType="jack_animation"
        />


</LinearLayout>